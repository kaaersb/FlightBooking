<Window x:Class="FlightBooking.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightBooking.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,-18,0,0">
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="685,10,0,0" VerticalAlignment="Top" Height="25" Width="50" RenderTransformOrigin="-0.12,0.508" Click="LoginButton_Click"/>
        <Button x:Name="RegisterButton" Content="Register" HorizontalAlignment="Left" Margin="740,10,0,0" VerticalAlignment="Top" Width="50" Height="25" Click="RegisterButton_Click"/>
        <Label Content="Origin&#xD;&#xA;" HorizontalAlignment="Left" Margin="30,44,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="OriginTextbox" HorizontalAlignment="Left" Margin="99,48,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Destination&#xD;&#xA;" HorizontalAlignment="Left" Margin="30,75,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.483,0.515"/>
        <TextBox x:Name="DestinationTextbox" HorizontalAlignment="Left" Margin="99,78,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Departure date&#xD;&#xA;" HorizontalAlignment="Left" Margin="281,44,0,0" VerticalAlignment="Top"/>
        <Label Content="Label" HorizontalAlignment="Left" Margin="281,75,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="DepatureDatepicker" HorizontalAlignment="Left" Margin="384,45,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.539,-0.207"/>
        <DatePicker x:Name="ReturnDatePicker" HorizontalAlignment="Left" Margin="384,79,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.439,0.557"/>
        <Label Content="One-Way?&#xD;&#xA;" HorizontalAlignment="Left" Margin="30,106,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="OneWayCheckbox" Content="CheckBox" HorizontalAlignment="Left" Margin="99,111,0,0" VerticalAlignment="Top"/>
        <Button x:Name="SearchButton" Content="SEARCH" HorizontalAlignment="Left" Margin="576,44,0,0" VerticalAlignment="Top" Height="73" Width="134" Click="SearchButton_Click"/>
        <DataGrid x:Name="FlightsGrid" AutoGenerateColumns="False" Margin="0,187,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Flight#"   Binding="{Binding FlightNumber}" />
                <DataGridTextColumn Header="Type"      Binding="{Binding Type}" />
                <DataGridTextColumn Header="Price"     Binding="{Binding Price}" />
                <DataGridTextColumn Header="Duration"  Binding="{Binding TotalDuration}" />
                <DataGridTextColumn Header="Token"     Binding="{Binding BookingToken}" />
                <!-- eller bind til FlightSegments, Layovers osv. med DataTemplates -->
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
